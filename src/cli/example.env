# D3X7-ALGO Environment Configuration

# Solana Network Configuration
SOLANA_NETWORK=devnet  # Options: mainnet-beta, devnet, testnet
RPC_URL=https://api.devnet.solana.com

# Wallet Configuration
WALLET_PATH=~/.config/solana/id.json  # Path to your Solana keypair
WALLET_PASSWORD=  # Optional: Password for encrypted wallet storage

# Trading Configuration
MAX_SLIPPAGE=1.0  # Maximum allowed slippage in percentage
DEFAULT_MARKET=SOL-PERP  # Default market for trading operations
POSITION_SIZE_LIMIT=100  # Maximum position size in USD

# Data Fetching Configuration
DEFAULT_TIMEFRAME=1m  # Default candle timeframe
DATA_STORAGE_PATH=./data  # Path to store fetched data
EXCHANGES=["binance", "drift"]  # List of exchanges to fetch data from

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=d3x7.log  # Log file path

# API Keys (Optional)
# WARNING: Never commit actual API keys to version control!
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret 